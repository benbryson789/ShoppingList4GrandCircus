@using ShoppingList4.Models 
@model List<CartItems>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
<h1>Shopping Cart</h1>

<div>
    <table class="table">
        <thead>
            <tr>
                <th>Product</th>
                <th>Quantity</th>
                <th class="text-right">Amount</th>
            </tr>
        </thead>
        <tbody>
            @{ 
                decimal total = 0;
            }
            @foreach (var item in Model)
            {
                var amount = item.Product.UnitPrice * item.Quantity ?? 0;
                total = total + amount;
                <tr>
                    <td>@item.Product.ProductName</td>
                    <td>@item.Quantity</td>
                    <td class="text-right">$@amount.ToString("N2") </td>
                </tr>
            }
            <tr>
                <td colspan="2"></td>
                <td class="text-right font-weight-bold">$@total.ToString("N2")</td>
            </tr>
        </tbody>
    </table>
</div>